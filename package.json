{
    "name": "azure-debug-relay",
    "displayName": "Azure Debug Relay",
    "description": "Azure Debug Relay Debugger Extension for Python",
    "version": "0.1.0",
    "publisher": "VladKolesnikov-vladkol",
    "repository": "https://github.com/vladkol/azure-debug-relay",
    "engines": {
        "vscode": "^1.34.0"
    },
    "categories": [
        "Debuggers"
    ],
    "activationEvents": [
        "workspaceContains:.azrelay.json"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "azdebugrelay.listen",
                "title": "Start listening"
            },
            {
                "command": "azdebugrelay.stop",
                "title": "Stop"
            }
        ],
        "configuration":{
            "title": "Azure Debug Relay",
            "properties": {
                "azdebugrelay.connection_string": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Connection String of an Azure Relay Hybrid Connection"
                },
                "azdebugrelay.hybrid_connection_name": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Azure Relay Hybrid Connection Name"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.34.0",
        "@typescript-eslint/eslint-plugin": "^3.0.2",
        "@typescript-eslint/parser": "^3.0.2",
        "eslint": "^7.1.0",
        "typescript": "^4.0.2"
    }
}
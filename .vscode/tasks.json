{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "azrelaybridge-listen-launch",
            "command": "python3 azdebugrelay/debug_relay.py --mode listen",
            "type": "shell",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ]
        },
        {
            "label": "azrelaybridge-empty-task",
            "command": "echo Preparing Azure Debug Relay...",
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "azrelaybridge-listen",
            "dependsOn":
                [
                    "azrelaybridge-stop",
                    "azrelaybridge-empty-task", // need this for VS Code to recognize stopped relay
                    "azrelaybridge-listen-launch"
                ], 
            "dependsOrder": "sequence"
        },
        {
            "label": "azrelaybridge-stop",
            "command": "python3 azdebugrelay/debug_relay.py",
            "type": "shell"
        }
    ]
}